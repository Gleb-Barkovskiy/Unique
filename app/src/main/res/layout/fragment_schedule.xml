<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_jungle_green"
    android:animateLayoutChanges="true">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/weekSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/spinner_bg_item_default"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:hint="@string/weekday"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/platinum"
        android:textColorHint="@color/platinum"
        android:textSize="14sp"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent"
        app:spinner_arrow_drawable="@drawable/ic_add"
        app:spinner_arrow_gravity="bottom"
        app:spinner_arrow_padding="8dp"
        app:spinner_divider_show="false"
        app:spinner_item_array="@array/weekdays"
        app:spinner_item_height="64dp"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@drawable/spinner_bg_item_default"
        app:spinner_popup_elevation="14dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_timetable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/weekSpinner"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layoutAnimation="@anim/layout_animation"
        tools:listitem="@layout/item_subject" />

    <com.akexorcist.roundcornerprogressbar.indeterminate.IndeterminateCenteredRoundCornerProgressBar
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:rcAnimationSpeedScale="1.5"
        app:rcBackgroundColor="@color/dark_gunmetal"
        app:rcProgressColor="@color/platinum"
        app:rcAnimationEnable="true"
        app:layout_constraintTop_toBottomOf="@id/weekSpinner"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"/>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ubuntu"
        android:visibility="invisible"
        tools:text="Error message"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/weekSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>