<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Unique" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_base_back</item>
        <item name="colorPrimaryVariant">@color/white_base_dark</item>
        <item name="colorOnPrimary">@color/white_base_back</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_base</item>
        <item name="colorSecondaryVariant">@color/green_base_dark</item>
        <item name="colorOnSecondary">@color/green_base</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="actionOverflowButtonStyle">@id/invisible</item>
        <item name="fontFamily">@font/jost_regular</item>
        <item name="android:textColor">@color/black_base</item>
        <item name="android:textSize">14sp</item>
        <item name="android:colorBackground">@color/white_base_back</item>
    </style>
</resources>